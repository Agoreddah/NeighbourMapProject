/* https://learnboost.github.io/stylus/ */

/* Basic variables
–––––––––––––––––––––––––––––––––––––––––––––––––– */
lobster-regular = Lobster, cursive

mapimage = url(../images/zilinamap-low.jpg) no-repeat top center fixed
beericon = url(../images/beer-icon.png) no-repeat
coffeeicon = url(../images/coffee-icon.png) no-repeat
drinkicon = url(../images/drink-icon.png) no-repeat
pointershadow = url(../images/pointer-shadow.png) no-repeat

cyan = #61e7ff
darkcyan = #05505d
darkblue = #105e6c

radius = 35px

noto-regular(size)
	font 400 size Noto Sans, sans-serif
	
noto-bold(size)
	font 700 size Noto Sans, sans-serif

border-radius()
	-webkit-border-radius radius
	-moz-border-radius radius
	border-radius radius

/* Custom code
–––––––––––––––––––––––––––––––––––––––––––––––––– */
body
	noto-regular(15px)
	line-height 21px
	

.cyan
	color cyan

.cyan-bg
	background cyan

.centered
	margin 0 auto
	position relative
	display block
	
.button
	noto-bold(15px)
	width 270px
	height 49px
	line-height 49px
	border-bottom 1px solid transparent
	border-radius()

.button.button-cyan
	color darkcyan
	background cyan
	border none
	
#map-canvas
	height 600px
	
.map-image
	height 70vh
	background mapimage
	background-size cover
  		
.pointer
	position absolute
	top -160px
	margin -55px 0 0 -50px
	
.pointer-wrapper
	position relative		
  		
.pointer-icon,
.pointer-shadow
	width 100px
	height 110px
	display block
	position absolute
	z-index 2

.pointer1
	left 50%

.pointer-icon1
	background beericon
	background-size 100px 110px
	
.pointer2
	left 25%	
	
.pointer-icon2
	background coffeeicon
	background-size 100px 110px

.pointer3
	left 75%

.pointer-icon3
	background drinkicon
	background-size 100px 110px

.pointer-shadow
	width 140px
	height 160px
	background pointershadow
	background-size 110px 120px
	position absolute
	z-index 1

.logo
	position absolute
	width 100%
	font 32px lobster-regular
	padding 35px 0 0
	text-align center
	color darkblue
	z-index 3
	
	.fl
		font 48px lobster-regular

.intro-text
	height 30vh
	display block
	text-align center
	
	.button
		margin 5vh auto 4vh

