/* https://learnboost.github.io/stylus/ */

/* Basic variables
–––––––––––––––––––––––––––––––––––––––––––––––––– */
lobster-regular = Lobster, cursive

mapimage = url(../images/zilinamap-normal.jpg) no-repeat top center fixed
beericon = url(../images/icons/beer-icon-big.png) no-repeat
coffeeicon = url(../images/icons/coffee-icon-big.png) no-repeat
drinkicon = url(../images/icons/drink-icon-big.png) no-repeat
pointershadow = url(../images/pointer-shadow.png) no-repeat

black = #2d2d2f
cyan = #61e7ff
darkcyan = #05505d
darkblue = #105e6c
gray = #a6a6ad

radius = 35px

noto-regular(size)
	font 400 size Noto Sans, sans-serif
	
noto-bold(size)
	font 700 size Noto Sans, sans-serif

border-radius()
	-webkit-border-radius radius
	-moz-border-radius radius
	border-radius radius

/* Custom code
–––––––––––––––––––––––––––––––––––––––––––––––––– */
body
	noto-regular(15px)
	line-height 21px
	color black
	
body a
	color cyan
	text-decoration none
	&:hover
		color cyan
	
.hidden
	display none !important
	visibility hidden !important
	opacity 0 !important

.tleft
	text-align left

.tcenter
	text-align center

.tright
	text-align right

.cyan
	color cyan

.cyan-bg
	background cyan

.centered
	margin 0 auto
	position relative
	display block
	
.button
	noto-bold(15px)
	width 270px
	height 49px
	line-height 49px
	border-bottom 1px solid transparent
	border-radius()

.button.button-cyan
	color darkcyan
	background cyan
	border none

.page-wrapper
	overflow hidden

.map-image
	height 70vh
	background mapimage
	background-size cover
		
.pointer
	position absolute
	top -160px
	margin -55px 0 0 -50px
	
.pointer-wrapper
	position relative		
  		
.pointer-icon,
.pointer-shadow
	width 100px
	height 110px
	display block
	position absolute
	z-index 2

.pointer1
	left 50%

.pointer-icon1
	background beericon
	background-size 100px 110px
	
.pointer2
	left 25%	
	
.pointer-icon2
	background coffeeicon
	background-size 100px 110px

.pointer3
	left 75%

.pointer-icon3
	background drinkicon
	background-size 100px 110px

.pointer-shadow
	width 140px
	height 160px
	background pointershadow
	background-size 110px 120px
	position absolute
	z-index 1

.logo
	position absolute
	width 100%
	font 32px lobster-regular
	padding 35px 0 0
	text-align center
	color darkblue
	z-index 3
	
.menu-logo
	font 32px lobster-regular
	
.fl
	font 48px lobster-regular

.intro-text
	height 30vh
	display block
	text-align center
	
	.button
		margin 5vh auto 4vh

#map-canvas
	height 90vh
	
.navigation
	height 10vh
	line-height 10vh
	
	ul
		list-style-type none
		margin 0
		display flex
		justify-content space-between
		
		li
			margin 0
			flex-direction column
			text-transform capitalize
		
		li.selected > *
		
			@media (max-width: 750px)
				color cyan

.sidebar
	position absolute
	height 90vh
	background #fff
	padding 30px 20px 15px
	box-sizing border-box
	transform translate(-100%, 0)
	z-index 5

.sidebar.columns
	position absolute
	
.sidebar-left
	transform translate(-100%, 0)
	
.sidebar-right
	right 0
	padding 0
	margin 0
	transform translate(100%, 0)
	overflow hidden

.sidebar-widget
	position absolute
	right 0
	height 90vh
	width 100%
	padding 30px 20px 15px
	box-sizing border-box
	
.widget-single-place
	padding-top 1em
	transform translate(100%, 0)	

.widget-search-places
	transform translate(0)
	
.list-title,
.place-title
	font-size 21px
	text-transform uppercase
	
input.search-input
	margin 1rem 0 3rem
	width 100%
	height 50px
	line-height 50px
	border 3px solid cyan
	border-radius 35px
	&:focus
		border 3px solid cyan
	
.places-list
	list-style-type none
	height 70vh
	overflow-y scroll
	margin 0

.place-list-title
	font-size 1.2em
	margin 0
	cursor pointer
	
.place-list-category
	font-size 0.8em
	margin-bottom 1.5em
	color gray
	
.place-info
	margin 1em 0 2em
	
.place-info p
	margin 0
	
.place-gallery
	height 70vh
	overflow-y scroll

.place-gallery ul
	list-style-type none
	
.place-gallery ul img
	width 100%
	max-width 100%

/* Google maps fix
------------------------------------ */
a[href^="http://maps.google.com/maps"]
a[href^="https://maps.google.com/maps"]
	display none !important
	
.gmnoprint
.gmnoprint gm-style-cc
.gm-style-cc
	display none

.gmnoprint div
	background none !important

